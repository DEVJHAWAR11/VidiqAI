{
  "manifest_version": 3,
  "name": "Klypse - AI YouTube Assistant",
  "version": "1.0.0",
  "description": "AI-powered chat assistant for YouTube videos. Ask questions and get instant answers.",
  "author": "Dev Jhawar",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://devjhawar-klypse.hf.space/*",
    "https://*.googlevideo.com/*"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_title": "Klypse AI Assistant"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar/sidebar.html", "sidebar/sidebar.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
