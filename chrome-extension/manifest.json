{
  "manifest_version": 3,
  "name": "VidIQAI - YouTube Video Chatbot",
  "version": "1.0.0",
  "description": "Chat with any YouTube video using AI. Ask questions, get summaries, and understand content better.",
  "author": "Your Name",
  
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ],
  
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:8000/*",
    "https://your-backend-url.com/*"
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/watch*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VidIQAI Chatbot"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["sidebar/sidebar.html", "sidebar/sidebar.css"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
